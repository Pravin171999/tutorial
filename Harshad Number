e.g
  num=156
       156%(1+5+6)==0
       
import java.util.Scanner;
class Harshad_Number 
{
	public static void main(String[] args) 
	{  
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter Number");
		 int num = sc.nextInt();
		 int sum=0;
		 for(int i=num; i!=0; i/=10)
		{   
			int rem=i%10;
            sum=sum+rem;

		}
		if(num%sum==0)
		{
			System.out.print("It is Harshad Number: "+num);
		}
		else
			System.out.print("It is not Harshad Number: "+num);
	}
}

      
